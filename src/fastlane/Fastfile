# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

ENV["FASTLANE_SKIP_UPDATE_CHECK"] = "1"
opt_out_usage

default_platform(:ios)

platform :ios do
  lane :browserstack_app_live do
    upload_to_browserstack_app_live(
      browserstack_username: ENV["BROWSERSTACK_USERNAME"],
      browserstack_access_key: ENV["BROWSERSTACK_ACCESS_KEY"],
      file_path: "fastlane/builds/"+git_branch+".ipa"
    )
  end

  lane :create_pr_executable do
    gym(scheme: "Catty (RELEASE)", export_method: "development", output_directory: "fastlane/builds/", output_name: git_branch)
  end

  lane :po_review do
    create_pr_executable
    browserstack_app_live
  end
end
